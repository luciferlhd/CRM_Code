@page
@using Microsoft.AspNetCore.Mvc.Localization
@using CRM_Code.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using CRM_Code.Web.Pages.Readers
@using CRM_Code.Readers;
@using System.Globalization
@inject IHtmlLocalizer<CRM_CodeResource> L
@model CreateModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/Readers/CreateModal" autocomplete="off">
    <abp-modal id="ReaderCreateModal">
        <abp-modal-header title="@L["NewReader"].Value"></abp-modal-header>

        <abp-modal-body>
             <abp-tabs>
                <abp-tab title="@L["Reader"].Value">
                    
            <abp-input asp-for="Reader.NameSurname"/>

            <abp-input asp-for="Reader.EmailAddress"/>

            <abp-select asp-for="Reader.Gender"/>

                    
                </abp-tab>
                                <abp-tab title="@L["Books"].Value">
                    <div class="input-group mb-3">
                        <select id="BookLookup"
                                        name="BookLookup"
                                        class="custom-select form-control"
                                        style="width: 85%"
                                        data-value="">
                        </select>
                        <abp-button button-type="Info" id="AddBookButton" class="text-light">@L["Add"]</abp-button>
                    </div>

                    <abp-row>
                        <abp-table style="display:none" id="BookTable">
                            <thead Theme="Dark">
                            <tr style="text-align: center; vertical-align: middle;">
                                <th scope="Column" style="text-align: left">Title</th>
                                <th scope="Column"></th>
                            </tr>
                            </thead>
                            <tbody id="BookTableRows">
                            </tbody>
                        </abp-table>
                    </abp-row>
                 </abp-tab>

            </abp-tabs>
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>